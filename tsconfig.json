{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    ".dockerignore",
    ".gitignore",
    "compose.yml",
    "Dockerfile"
  ]
}
